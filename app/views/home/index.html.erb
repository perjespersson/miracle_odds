<div style="width: 1400px; margin: 0 auto; display: flex; justify-content: space-between;">
  <div style="width: 22%;">
    <h1 style="text-align: center">Unibet</h1>

    <% @unibet.each do |bet| %>
      <div style="width: 100%; border: 1px solid gray; margin-bottom: 10px;">
        <p style="text-align: center; padding-bottom: 0; margin-bottom: 5px;"><%= bet.time.strftime("%H:%M") %></p>
        <p style="text-align: center; padding-top: 0; margin-top: 0; "><b><%= bet.time.strftime("%F") %></b></p>
        <p style="margin-left: 20px;"><b><%= bet.home_team %>:</b> <%= bet.home_team_bet %></p>
        <p style="margin-left: 20px;"><b>Oavgjort:</b> <%= bet.tie_bet %></p>
        <p style="margin-left: 20px;"><b><%= bet.away_team %>:</b> <%= bet.away_team_bet %></p>
      </div>
    <% end %>
  </div>

